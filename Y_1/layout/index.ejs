<section class="posts">
	<% page.posts.each(function (post) { %>
		<article class="post">
			<h1>
				<a class="title" href="<%- url_for(post.path) %>">
					<%= post.title %>
				</a>
			</h1>
			<%- partial("_partial/meta",{page:post}) %>
			<div class="content">
				 <% if(post.excerpt) {%>
               				 <%- post.excerpt %>
               				 <%}  else{ %>
               				 <%- post.content %>
               				 <% } %>
			</div>
			<div class="continue">
				<a href="<%- url_for(post.path) %>">
				<%- __('Continue') -%>
				<i class="fa fa-calendar-o" aria-hidden="true"></i>
				</a>
			</div>
			</article>
			<% }) %>
</section>
